<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">


    <View
        android:id="@+id/view_divide"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:background="#00000000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_black_r2"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:src="@mipmap/ic_goods_def" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:text="旺驰正月星月菩提子海南原籽高密手链驰正月星月驰正月"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="￥123.00"
                        android:textColor="#888888"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="￥39.90"
                        android:textColor="#E76D84"
                        android:textSize="13sp" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="颜色"
                android:textColor="#888888"
                android:textSize="11sp" />


            
            <com.gipsyz.panoramaglandroid.CustomRadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />


                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />


                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />


                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />


                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray_r2"
                        android:button="@null"
                        android:text="03赤瞳丹霞"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@drawable/bg_txt_select"
                        />

                </LinearLayout>

                </com.gipsyz.panoramaglandroid.CustomRadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="数量"
                android:textColor="#888888"
                android:textSize="11sp" />

            <com.gipsyz.panoramaglandroid.AmountView
                android:id="@+id/view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#50888888" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="#FE5779" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#FE5779"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="#fff" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>